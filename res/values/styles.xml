<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <style name="tab_item_text_style">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>       
        <item name="android:singleLine">true</item>
    </style>
    
    

    <style name="AppTheme" parent="android:Theme.Light" />
    <!-- 解决android启动时黑屏问题 -->
    <style name="ContentOverlay" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowFullscreen">?android:windowNoTitle</item> -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="custom_window_title_background">
        <item name="android:background">#1E90FF</item>
    </style>

    <style name="custom_title" parent="@android:style/Theme.Black">
        <item name="android:windowTitleBackgroundStyle">@null</item>
        <item name="android:windowTitleSize">50dip</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 标题栏标题字体样式 -->
    <style name="set_title_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#CC0000</item>
    </style>

    <!-- 个性设置混布局背景一致 -->
    <style name="perference_set_activity01">
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:cacheColorHint">#ffffffff</item>
        <item name="android:windowNoTitle">false</item> <!-- 用来设定是否显示标题 -->
    </style>
    <!-- 字体设置 -->
    <style name="settings_text">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18px</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">24px</item>
    </style>

    <style name="small_text_gray">
        <item name="android:textColor">#858585</item>
        <item name="android:textSize">20px</item>
    </style>
    <style name="small_text_red">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">20px</item>
    </style>
    <style name="mini_text_gray">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">14px</item>
    </style>
    <style name="professer_name">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22px</item>
    </style>
    <style name="professer_count">
        <item name="android:textColor">#FFFF00</item>
        <item name="android:textSize">14px</item>
    </style>
    <style name="professer_intro">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22px</item>
    </style>
    <style name="button_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22px</item>
    </style>
    <!-- 自定义设置界面样式 -->
	<!-- 更新提示框样式 -->
	<style name="custom_dlg_update" parent="@android:Theme.Dialog">       
        <item name="android:windowBackground">@null</item> 
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item> 
    </style>
   <style name="AnimationFade">
		<!--   PopupWindow上下弹出的效果-->
		<item name="android:windowEnterAnimation">@anim/in_from_down</item>
		<item name="android:windowExitAnimation">@anim/out_to_down</item>
	</style>
	<style name="AnimationFadeRight">
		<!--   PopupWindow左右弹出的效果-->
		<item name="android:windowEnterAnimation">@anim/in_from_right</item>
		<item name="android:windowExitAnimation">@anim/out_to_right</item>
	</style>
	
	<style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item><!--内容覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item><!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->     
    </style>
	
</resources>